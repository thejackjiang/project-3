  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "axios": "^0.16.2",
    "bootstrap": "^4.3.1",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "bcrypt-nodejs": "0.0.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.6",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "dotenv": "^7.0.0",
    "express-jwt": "^5.3.1"
  }
